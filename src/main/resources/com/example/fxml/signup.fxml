<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.controllers.SignupController">
    <children>
        <Label layoutX="30.0" layoutY="30.0" text="SignUp" />
        <Label layoutX="30.0" layoutY="80.0" text="Email" />
        <TextField fx:id="emailField" layoutX="120.0" layoutY="75.0" promptText="Enter your email" />

        <Label layoutX="30.0" layoutY="130.0" text="Username" />
        <TextField fx:id="usernameField" layoutX="120.0" layoutY="125.0" promptText="Enter your username" />

        <Label layoutX="30.0" layoutY="180.0" text="Password" />
        <PasswordField fx:id="passwordField" layoutX="120.0" layoutY="175.0" promptText="Enter your password" />

        <Button layoutX="69.0" layoutY="225.0" onAction="#signup" text="Create New Account" />

        <Label fx:id="messageLabel" layoutX="120.0" layoutY="270.0" text="" />
    </children>
</AnchorPane>
